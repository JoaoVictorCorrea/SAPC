<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".solicitacaotela">

    <TextView
        android:id="@+id/txtSoli"
        android:layout_width="310dp"
        android:layout_height="239dp"
        android:layout_marginTop="196dp"
        android:text="@string/soli"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAceitar"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="#7DFF0B"
        android:text="Aceitar"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSoli"
        tools:text="Aceitar" />

    <Button
        android:id="@+id/btnRecusar"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#FF0000"
        android:text="Recusar"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnAceitar"
        app:layout_constraintTop_toBottomOf="@+id/txtSoli" />
</androidx.constraintlayout.widget.ConstraintLayout>